@inject IHttpContextAccessor _httpContextAccessor
@using RebelCmsTemplate.Models.Administrator
@using RebelCmsTemplate.Repository.Administrator;
@using RebelCmsTemplate.Util;
@using Microsoft.AspNetCore.Http
@{
    SharedUtil sharedUtils = new(_httpContextAccessor);
    List<UserModel> userModels = new();
    List<RoleModel> roleModels = new();
    try
    {
        UserRepository userRepository = new(_httpContextAccessor);
        userModels = userRepository.Read();

        RoleRepository roleRepository = new(_httpContextAccessor);
        roleModels = roleRepository.Read();
    }
    catch (Exception ex)
    {
        sharedUtils.SetSystemException(ex);
    }
    var fileInfo = ViewContext.ExecutingFilePath?.Split("/");
    var filename = fileInfo != null ? fileInfo[4] : "";
    var name = filename.Split(".")[0];
    var navigationModel = sharedUtils.GetNavigation(name);
}

<div class="page-title">
    <div class="row">
        <div class="col-12 col-md-6 order-md-1 order-last">
            <h3>@navigationModel.LeafName</h3>
        </div>
        <div class="col-12 col-md-6 order-md-2 order-first">
            <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="#">
                            <i class="@navigationModel.FolderIcon"></i> @navigationModel.FolderName
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        <i class="@navigationModel.LeafIcon"></i> @navigationModel.LeafName
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        <i class="fas fa-sign-out-alt"></i>
                        <a href="/logout">Logout</a>
                    </li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<section class="content">
    <div class="container-fluid">
        <form class="form-horizontal">
            <div class="card card-primary">
                <div class="card-header">Filter</div>
                <div class="card-body">

                    <div class="form-group">
                        <div class="col-md-2">
                            <label for="search">Search</label>
                        </div>
                        <div class="col-md-10">
                            <input name="search" id="search" class="form-control"
                                placeholder="Please Enter Name  Or Other Here" maxlength="64"
                                style="width: 350px!important;" />
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="button" class="btn btn-info" onclick="searchRecord()">
                        <i class="fas fa-filter"></i> Filter
                    </button>
                    &nbsp;
                    <button type="button" class="btn btn-warning" onclick="resetRecord()">
                        <i class="fas fa-power-off"></i> Reset
                    </button>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12">&nbsp;</div>
            </div>
        </form>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="card">
                    <table class="table table-bordered table-striped table-condensed table-hover">
                        <thead>
                            <tr>
                                <td>
                                    <label>
                                        <select name="roleKey[]" id="roleKey" class="form-control">
                                            @foreach (var rowRole in roleModels)
                                            {
                                                <option value="@rowRole.RoleKey">@rowRole.RoleName</option>
                                            }
                                        </select>
                                    </label>
                                </td>
                                <td>
                                    <label>
                                        <input type="text" name="userName" id="userName" class="form-control" />
                                    </label>
                                </td>
                                <td>
                                    <label>
                                        <input type="text" name="userEmail" id="userEmail" class="form-control" />
                                    </label>
                                </td>
                                <td>
                                    <label>
                                        <input type="text" name="userPassword" id="userPassword" class="form-control" />
                                    </label>
                                </td>
                                <td style="text-align: center">
                                    <Button type="button" class="btn btn-info" onclick="createRecord()">
                                        <i class="fa fa-newspaper"></i>&nbsp;&nbsp;CREATE
                                    </Button>
                                </td>
                            </tr>
                            <tr>
                                <th>ROLE</th>
                                <th>USER</th>
                                <th>EMAIL</th>
                                <th style="width: 230px">PASSWORD</th>
                            </tr>
                        </thead>
                        <tbody id="tableBody">
                            @foreach (var row in userModels)
                            {
                                <tr id='user-@row.UserKey'>
                                    <td class="tdNormalAlign">
                                        <label>
                                            <select name="roleKey[]" id="roleKey-@row.UserKey" class="form-control">
                                                @foreach (var option in from rowRole in roleModels
                                                                       let selected =
                                                                       rowRole.RoleKey == row.RoleKey ? "selected" : ""
                                                                       select
                                                                       Html.Raw("<option value='" + rowRole.RoleKey + "' " + selected + ">" +
                                                                       rowRole.RoleName + "</option>"))
                                                {
                                                    @option
                                                }
                                            </select>
                                        </label>
                                    </td>
                                    <td class="tdNormalAlign">
                                        <label>
                                            <input type="text" class="form-control" name='userName[]'
                                            id='userName-@row.UserKey' value='@row.UserName' />
                                        </label>
                                    </td>
                                    <td class="tdNormalAlign">
                                        <label>
                                            <input type="text" class="form-control" name='userEmail[]'
                                            id='userEmail-@row.UserKey' value='@row.UserEmail' />
                                        </label>
                                    </td>
                                    <td class="tdNormalAlign">
                                        <label>
                                            <input type="text" class="form-control" name='userPassword[]'
                                            id='userPassword-@row.UserKey' value='@row.UserPassword' />
                                        </label>
                                    </td>
                                    <td style='text-align: center'>
                                        <Button type="button" class="btn btn-warning" onclick='updateRecord(@row.UserKey)'>
                                            <i class="fas fa-edit"></i>&nbsp;UPDATE
                                        </Button>
                                        <br /><br />
                                        <Button type="button" class="btn btn-danger" onclick='deleteRecord(@row.UserKey)'>
                                            <i class="fas fa-trash"></i>&nbsp;DELETE
                                        </Button>
                                    </td>
                                </tr>
                            }

                            @if (userModels.Count == 0)
                            {
                                <tr>
                                    <td colspan="7" class="noRecord">
                                        @SharedUtil.NoRecord
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    var rowModels = @Json.Serialize(roleModels);
</script>
<script>

    function resetRecord() {
        readRecord();
        $("#search").val("");
    }
    function emptyTemplate() {
        return "" +
            "<tr>" +
            "<td colspan='4'>It's lonely here</td>" +
            "</tr>";
    }
    function template(userKey, roleKey, userName, userEmail) {
        let roleKeyOptions = "";
        rowModels.map((row) => {
            let selected = (row.roleKey === roleKey) ? "selected" : "";
            roleKeyOptions += "<option value='" + row.roleKey + "' " + selected + ">" + row.roleName + "</option>";
        });
        let templateString = "<tr id='user-" + userKey + "'>" +
            "<td class='tdNormalAlign'>" +
            " <label>" +
            "   <select id='roleKey-" + userKey + "' class='form-control'>";

        templateString += roleKeyOptions;
        templateString += "</select>" +
            "</label>" +
            "</td>" +
            "<td class='tdNormalAlign'>" +
            "<label>" +
            "<input type='text' class='form-control' id='userName-" + userKey + "' value='" + userName + "' />" +
            "</label>" +
            "</td>" +

            "<td class='tdNormalAlign'>" +
            "<label>" +
            "<input type='text' class='form-control' id='userEmail-" + userKey + "' value='" + userEmail + "' />" +
            "</label>" +
            "</td>" +
            "<td class='tdNormalAlign'>" +
            "<label>" +
            "<input type='text' class='form-control' id='userPassword-" + userKey + "' value='' />" +
            "</label>" +
            "</td>" +

            "<td style='text-align: center'><div class='btn-group'>" +
            "<Button type='button' class='btn btn-warning' onclick='updateRecord(" + userKey + ")'>" +
            "<i class='fas fa-edit'></i> UPDATE" +
            "</Button>" +
            "&nbsp;" +
            "<Button type='button' class='btn btn-danger' onclick='deleteRecord(" + userKey + ")'>" +
            "<i class='fas fa-trash'></i> DELETE" +
            "</Button>" +
            "</div></td>" +

            "</tr>" +
            "";
        return templateString;
    }
    function createRecord() {
        const $roleKey = $("#roleKey");
        const $userName = $("#userName");
        const $userEmail = $("#userEmail");
        const $userPassword = $("#userPassword");

        if (!$roleKey.val()) {
            Swal.fire("System Error", "Please Enter all the form", "error");
            $roleKey.addClass("is-invalid").trigger('focus');
        }
        else if ($userName.val().length === 0) {
            Swal.fire("System Error", "Please Enter all the form", "error");
            $userName.addClass("is-invalid").trigger('focus');
        }
        else {
            $roleKey.removeClass("is-invalid");
            $userName.removeClass("is-invalid");
            $.ajax({
                type: 'POST',
                url: "api/administrator/user",
                async: false,
                data: {
                    mode: 'create',
                    leafCheckKey: @navigationModel.LeafCheckKey,
                    roleKey: $roleKey.val(),
                    userName: $userName.val(),
                    userEmail: $userEmail.val(),
                    userPassword: $userPassword.val()
                },
                statusCode: {
                    500: function () {
                        Swal.fire("System Error", "@SharedUtil.UserErrorNotification", "error");
                        accessDenied();
                    }
                },
                beforeSend: function () {
                    console.log("loading");
                }
            }).done(function (data) {
                if (data === void 0) {
                    location.href = "/";
                }
                let status = data.status;
                let code = data.code;
                if (status) {
                    $("#tableBody").prepend(template(data.lastInsertKey, $roleKey.val(), $userName.val(), $userEmail.val()));
                    Swal.fire({
                        title: 'Success!',
                        text: '@SharedUtil.RecordCreated',
                        icon: 'success',
                        confirmButtonText: 'Cool'
                    })
                    $roleKey.val("");
                    $userName.val("");
                    $userEmail.val("");
                    $userPassword.val("");
                } else if (status === false) {
                    if (parseInt(code) === accessDeniedCode) {
                        accessDenied();
                    } else if (typeof (code) === 'string') {
                        callBackError();
                    } else {
                        location.href = "/";
                    }
                } else {
                    location.href = "/";
                }
            }).fail(function (xhr) {
                console.log(xhr.status)
                Swal.fire("System", "@SharedUtil.UserErrorNotification", "error");
            }).always(function () {
                console.log("always:complete");
            });
        }
    }
    function readRecord() {
        $.ajax({
            type: "post",
            url: "api/administrator/user",
            async: false,
            contentType: "application/x-www-form-urlencoded",
            data: {
                mode: "read",
                leafCheckKey: @navigationModel.LeafCheckKey
            },
            statusCode: {
                500: function () {
                    Swal.fire("System Error", "@SharedUtil.UserErrorNotification", "error");
                    accessDenied();
                }
            },
            beforeSend: function () {
                console.log("loading");
            }
        }).done(function (data) {
            if (data === void 0) {
                location.href = "/";
            }
            let status = data.status;
            let code = data.code;
            if (status) {
                if (data.data === void 0) {
                    $("#tableBody").html("").html(emptyTemplate());
                } else {
                    if (data.data.length > 0) {
                        let templateStringBuilder = "";
                        for (let i = 0; i < data.data.length; i++) {
                            const row = data.data[i];
                            templateStringBuilder += template(row.userKey, row.roleKey, row.userName, row.userEmail);
                        }
                        $("#tableBody").html("").html(templateStringBuilder);
                    } else {
                        $("#tableBody").html("").html(emptyTemplate());
                    }
                }
            } else if (status === false) {
                if (typeof (code) === 'string') {
                    callBackError();
                } else if (parseInt(code) === accessDeniedCode) {
                    accessDenied();
                } else {
                    location.href = "/";
                }
            } else {
                location.href = "/";
            }
        }).fail(function (xhr) {
            console.log(xhr.status)
            Swal.fire("System", "@SharedUtil.UserErrorNotification", "error");
        }).always(function () {
            console.log("always:complete");
        });
    }
    function searchRecord() {
        $.ajax({
            type: "post",
            url: "api/administrator/user",
            async: false,
            contentType: "application/x-www-form-urlencoded",
            data: {
                mode: "search",
                leafCheckKey: @navigationModel.LeafCheckKey,
                search: $("#search").val()
            }, statusCode: {
                500: function () {
                    Swal.fire("System Error", "@SharedUtil.UserErrorNotification", "error");
                    accessDenied();
                }
            }, beforeSend() {
                console.log("loading ..");
            }
        }).done(function (data) {
            if (data === void 0) {
                location.href = "/";
            }
            let status = data.status;
            let code = data.code;
            if (status) {
                if (data.data === void 0) {
                    $("#tableBody").html("").html(emptyTemplate());
                } else {
                    if (data.data.length > 0) {
                        let templateStringBuilder = "";
                        for (let i = 0; i < data.data.length; i++) {
                            const row = data.data[i];
                            templateStringBuilder += template(row.userKey, row.roleKey, row.userName, row.userEmail);
                        }
                        $("#tableBody").html("").html(templateStringBuilder);
                    } else {
                        $("#tableBody").html("").html(emptyTemplate());
                    }
                }
            } else if (status === false) {
                if (typeof (code) === 'string') {
                    callBackError();
                } else if (parseInt(code) === accessDeniedCode) {
                    accessDenied();
                } else {
                    location.href = "/";
                }
            } else {
                location.href = "/";
            }
        }).fail(function (xhr) {
            console.log(xhr.status)
            Swal.fire("System", "@SharedUtil.UserErrorNotification", "error");
        }).always(function () {
            console.log("always:complete");
        });
    }
    function updateRecord(userKey) {
        let $roleKey = $("#roleKey-" + userKey);
        let $userName = $("#userName-" + userKey);
        let $userEmail = $("#userEmail-" + userKey);
        let $userPassword = $("#userPassword-" + userKey);
        if (!$roleKey.val()) {
            Swal.fire("System Error", "Please Enter all the form:[Role]", "error");
            $roleKey.addClass("is-invalid").trigger('focus');
        }
        else if ($userName.val().length === 0) {
            Swal.fire("System Error", "Please Enter all the form:[Name]", "error");
            $userName.addClass("is-invalid").trigger('focus');
        }
        else {
            $roleKey.removeClass("is-invalid");
            $userName.removeClass("is-invalid");
            $.ajax({
                type: 'POST',
                url: "api/administrator/user",
                async: false,
                data: {
                    mode: 'update',
                    leafCheckKey: @navigationModel.LeafCheckKey,
                    roleKey: $roleKey.val(),
                    userName: $userName.val(),
                    userEmail: $userEmail.val(),
                    userPassword: $userPassword.val(),
                    userKey: userKey
                },
                statusCode: {
                    500: function () {
                        Swal.fire("System Error", "@SharedUtil.UserErrorNotification", "error");
                        accessDenied();
                    }
                },
                beforeSend: function () {
                    console.log("loading..");
                }
            }).done(function (data) {
                if (data === void 0) {
                    location.href = "/";
                }
                let status = data.status;
                let code = data.code;
                if (status) {
                    Swal.fire("System", "@SharedUtil.RecordUpdated", 'success')
                } else if (status === false) {
                    if (typeof (code) === 'string') {
                        callBackError();
                    } else if (parseInt(code) === accessDeniedCode) {
                        accessDenied();
                    } else {
                        location.href = "/";
                    }
                } else {
                    location.href = "/";
                }
            }).fail(function (xhr) {
                console.log(xhr.status)
                Swal.fire("System", "@SharedUtil.UserErrorNotification", "error");
            }).always(function () {
                console.log("always:complete");
            });
        }
    }
    function deleteRecord(userKey) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'No, cancel!',
            reverseButtons: true
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    type: 'POST',
                    url: "api/administrator/user",
                    async: false,
                    data: {
                        mode: 'delete',
                        leafCheckKey: @navigationModel.LeafCheckKey,
                        userKey: userKey
                    },
                    statusCode: {
                        500: function () {
                            Swal.fire("System Error", "@SharedUtil.UserErrorNotification", "error");
                            accessDenied();
                        }
                    },
                    beforeSend: function () {
                        console.log("loading..");
                    }
                }).done(function (data) {
                    if (data === void 0) {
                        location.href = "/";
                    }
                    let status = data.status;
                    let code = data.code;
                    if (status) {
                        $("#user-" + userKey).remove();
                        Swal.fire("System", "@SharedUtil.RecordDeleted", "success");
                    } else if (status === false) {
                        if (typeof (code) === 'string') {
                            callBackError();
                        } else if (parseInt(code) === accessDeniedCode) {
                            accessDenied();
                        } else {
                            location.href = "/";
                        }
                    } else {
                        location.href = "/";
                    }
                }).fail(function (xhr) {
                    console.log(xhr.status)
                    Swal.fire("System", "@SharedUtil.UserErrorNotification", "error");
                }).always(function () {
                    console.log("always:complete");
                });
            } else if (result.dismiss === swal.DismissReason.cancel) {
                swal(
                    'Cancelled',
                    'Be careful before delete record',
                    'error'
                )
            }
        });

    }
</script>